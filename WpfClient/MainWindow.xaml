<Window
    x:Class="WpfClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfClient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="250"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Button
                x:Name="btn_Login"
                HorizontalAlignment="Left"
                Width="100"
                Height="30"
                Margin="20"
                Click="btn_Login_Click"
                Content="Login via IS4" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button
                x:Name="btn_Test"
                Width="100"
                Height="30"
                Margin="20"
                Click="btn_Test_Click"
                Content="Call Hub" />
                <Button
                x:Name="btn_Test_api1"
                Width="100"
                Height="30"
                Margin="20"
                Click="btn_Test_api1_Click"
                Content="Call Api" />
            </StackPanel>
            <TextBlock Margin="10" Text="See Visual studio Output window for logging. This window has none." />
        </StackPanel>
    </Grid>
</Window>
